<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etMonto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monto Invertido" />

    <EditText
        android:id="@+id/etTasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tasa de Rendimiento (%)"
        android:layout_below="@id/etMonto"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etPlazo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plazo (aÃ±os)"
        android:layout_below="@id/etTasa"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_below="@id/etPlazo"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/teVInversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Total"
        android:layout_below="@id/btnCalcular"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/teVGanancias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Ganancias"
        android:layout_below="@id/teVInversion"
        android:layout_marginTop="8dp" />

</RelativeLayout>
